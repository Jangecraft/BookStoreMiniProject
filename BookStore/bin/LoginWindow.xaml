<Window x:Class="BookStore.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Background.png"/>
        </Grid.Background>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="40" Margin="335,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="220,138,0,0" TextWrapping="Wrap" Text="User" VerticalAlignment="Top" Height="40" Width="110" FontSize="24"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="40" Margin="335,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="220,197,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="40" Width="110" FontSize="24"/>
        <Image HorizontalAlignment="Left" Height="85" Margin="191,36,0,0" VerticalAlignment="Top" Width="424" Source="title.png"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="220,268,0,0" VerticalAlignment="Top" Width="160" Height="42" Click="Login_Button_Click"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="425,268,0,0" VerticalAlignment="Top" Width="160" Height="42" Click="Register_Button_Click"/>

    </Grid>
</Window>
